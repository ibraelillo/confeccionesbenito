<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sonata.admin.locations" class="Gites\LocationBundle\Admin\LocationAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Gites" label="Locations"/>
            <argument />
            <argument>Gites\LocationBundle\Entity\Location</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            <call method="setTranslationDomain">
                <argument>LocationBundle</argument>
            </call>
        </service>
        <service id="sonata.admin.comments" class="Gites\LocationBundle\Admin\CommentAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Gites" label="Comments"/>
            <argument />
            <argument>Gites\LocationBundle\Entity\Comment</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            <call method="setTranslationDomain">
                <argument>LocationBundle</argument>
            </call>
        </service>
    </services>
</container>