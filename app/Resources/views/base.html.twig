<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
        <style type="text/css">
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
            .sidebar-nav {
                padding: 9px 0;
            }
            footer {
                position: relative;
                margin: 40px 0 0 0;
                font-size: 12px;
                line-height: 1.5;
                color: #777;
                text-shadow: 0 1px 0 #fff;
            }
            .footer_nav {
                width: 20%;
                float: left;
                margin-bottom: 20px;
            }
            .bubble {
                padding: 3px;
                background: #eee;
                border-radius: 3px;
            }
        </style>
        <link href="{{ asset('css/bootstrap-responsive.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery.pnotify.default.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery.pnotify.default.icons.css') }}" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{ path('desktop') }}" style="font-weight: bolder;">{{ enterprise|title }}</a>
                <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                        <img src="" height="20" width="20" /> <a href="#" class="navbar-link">{{ app.user|default("username") }}</a>
                    </p>
                    <ul class="nav pull-right">
                        <li class="divider-vertical"></li>
                        <li>
                            <form class="navbar-form form-search inline-search" action="#">
                                <div class="input-append">
                                    <input type="text" class="search-query span5" placeholder="Escribe un producto, proveedor, gran familia...">
                                    <button type="submit" class="btn"><i class="icon-search"></i></button>
                                </div>
                            </form>
                        </li>
                        <li class="divider-vertical"></li>
                        <li>
                            <a class="navbar-link" href="#"><i class="icon-cog"></i> Configuraci&oacute;n</a>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container">
        {% if app.user.flashBag is defined and app.user.flashBag|length > 0 %}
            {% for tpe, message in app.user.getFlashBag %}
            <div class="alert alert-{{ type }}">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Alert!</strong> {{ message }}
            </div>
            {% endfor %}
        {% endif %}

        {% block body %}{% endblock %}
    </div>
    <footer>
        <div class="container clearfix">
            <hr/>
            <dl class="footer_nav">
                <dt>Dise&ntilde;ado y realizado por {{ author }}</dt>
                <dd>prueba</dd>
            </dl>
            <dl class="footer_nav">
                <dt>Dise&ntilde;ado y realizado por {{ author }}</dt>
                <dd>prueba</dd>
            </dl>
            <dl class="footer_nav">
                <dt>Dise&ntilde;ado y realizado por {{ author }}</dt>
                <dd>prueba</dd>
            </dl>
            <dl class="footer_nav">
                <dt>Dise&ntilde;ado y realizado por {{ author }}</dt>
                <dd>prueba</dd>
            </dl>
            <dl class="footer_nav">
                <dt>Dise&ntilde;ado y realizado por {{ author }}</dt>
                <dd>prueba</dd>
            </dl>

        </div>

        <div class="container clearfix">
            <hr />
            <p class="pull-right">
                &copy; {{ ""|date('Y') }}  {{ enterprise|title }}. Todos los derechos reservados.
            </p>
        </div>

    </footer>


    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap-transition.js') }}"></script>
    <script src="{{ asset('js/bootstrap-alert.js') }}"></script>
    <script src="{{ asset('js/bootstrap-modal.js') }}"></script>
    <script src="{{ asset('js/bootstrap-dropdown.js') }}"></script>
    <script src="{{ asset('js/bootstrap-scrollspy.js') }}"></script>
    <script src="{{ asset('js/bootstrap-tab.js') }}"></script>
    <script src="{{ asset('js/bootstrap-tooltip.js') }}"></script>
    <script src="{{ asset('js/bootstrap-popover.js') }}"></script>
    <script src="{{ asset('js/bootstrap-button.js') }}"></script>
    <script src="{{ asset('js/bootstrap-collapse.js') }}"></script>
    <script src="{{ asset('js/bootstrap-carousel.js') }}"></script>
    <script src="{{ asset('js/bootstrap-typeahead.js') }}"></script>

    <script src="{{ asset('js/google-code-prettify/prettify.js') }}"></script>

    <script src="{{ asset('js/bootstrap-prompts-alert.js') }}"></script>
    <script src="{{ asset('js/jquery.pnotify.min.js') }}"></script>


    <script type="text/javascript">
        function notificar(title, message, type)
        {
            $(function(){
                $.pnotify({
                    title: title,
                    text: message,
                    type: type
                });
            });
        }

        $(function(){
            $('[rel=popover]').popover();
            $('[rel=tooltip]').tooltip();

        });
    </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
